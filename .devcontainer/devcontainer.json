{
  "name": "Laravel PHP Development",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "laravel",
  "workspaceFolder": "/var/www/html",
  "remoteUser": "www-data",
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "xdebug.php-debug",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "php.executablePath": "/usr/local/bin/php",
        "php.debug.executablePath": "/usr/local/bin/php",
        "php.debug.port": 9003,
        "php.debug.ideKey": "PHPSTORM",
        "intelephense.environment.phpVersion": "8.3.0",
        "[php]": {
          "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
        }
      }
    }
  },
  "postCreateCommand": "composer install && npm install && npm run build && php artisan key:generate --force && php artisan migrate --force",
}
